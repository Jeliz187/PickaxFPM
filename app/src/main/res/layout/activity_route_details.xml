<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.utep.cs.pickax.fpms.RouteDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance"
        android:id="@+id/RouteDistance"
        android:layout_column="16"
        android:layout_marginEnd="55dp"
        android:textSize="20dp"
        android:layout_alignTop="@+id/RouteName"
        android:layout_alignEnd="@+id/scrollView"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/RouteName"
        android:layout_marginStart="53dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View style="@style/Divider"
        android:background="@android:color/darker_gray"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/RouteDistance" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:id="@+id/scrollView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RouteDetailTable"
            android:layout_marginTop="5dp"
            android:weightSum="100"
            android:stretchColumns="0,1,2,3,4,5">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_height="match_parent"
                    android:text="          "
                    android:gravity="center"
                    android:weightSum="20"/>

                <TextView
                    android:layout_height="match_parent"
                    android:text="Latitude"
                    android:gravity="center"
                    android:weightSum="20"
                    android:singleLine="false"
                    android:elegantTextHeight="false" />

                <TextView
                    android:layout_height="match_parent"
                    android:text="Longitude"
                    android:gravity="center"
                    android:weightSum="20"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:text="Course"
                    android:gravity="center"
                    android:weightSum="20"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:gravity="center"
                    android:weightSum="20"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"> </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

        </TableLayout>
    </ScrollView>
</RelativeLayout>

