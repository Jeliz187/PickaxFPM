<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="edu.utep.cs.pickax.fpms.Start"
    android:gravity="center">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/create_fp"
                android:id="@+id/btn_create_fp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/manage_fp"
                android:id="@+id/btn_manage_fp"
                android:layout_below="@id/btn_create_fp"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:layout_gravity="center" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/manage_res"
                android:id="@+id/btn_manage_res"
                android:layout_below="@+id/btn_manage_fp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/set_prefs"
                android:id="@+id/btn_set_prefs"
                android:layout_below="@+id/btn_manage_res"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/start_flight"
                android:id="@+id/btn_start_flight"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_set_prefs"
                android:layout_gravity="center" />

</LinearLayout>


