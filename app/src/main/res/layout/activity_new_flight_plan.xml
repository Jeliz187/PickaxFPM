<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.utep.cs.pickax.fpms.NewFlightPlan">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/origin"
        android:id="@+id/tv_origin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_origin"
        android:layout_below="@id/tv_origin"
        android:layout_alignStart="@id/tv_origin" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dest"
        android:id="@+id/tv_dest"
        android:layout_below="@id/txt_origin"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_dest"
        android:layout_below="@id/tv_dest"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aircraft"
        android:id="@+id/tv_aircraft"
        android:layout_below="@id/txt_dest"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_aircraft"
        android:layout_below="@id/tv_aircraft"
        android:layout_alignParentStart="true" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/btn_submit"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_origin"
        android:id="@+id/btn_find_origin"
        android:layout_toEndOf="@id/txt_origin"
        android:layout_alignBottom="@id/txt_origin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_dest"
        android:id="@+id/btn_find_dest"
        android:layout_below="@id/btn_find_origin"
        android:layout_toEndOf="@id/txt_dest"
        android:layout_alignBottom="@id/txt_dest"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_aircraft"
        android:id="@+id/btn_find_aircraft"
        android:layout_below="@id/btn_find_dest"
        android:layout_toEndOf="@id/txt_aircraft"
        android:layout_alignBottom="@id/txt_aircraft" />

</RelativeLayout>
