<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.utep.cs.pickax.fpms.custom_routes"
    android:id="@+id/">

        <TextView
            android:id="@+id/tv_name_custom_routes"
            android:text="@string/name"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:singleLine="false"
            android:elegantTextHeight="false"
            android:layout_width="wrap_content"
            android:padding="25dp"
            android:layout_row="0"
            android:layout_column="0" />

    <ScrollView
            android:layout_width="641dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
        android:layout_column="23"
        android:layout_below="@+id/tv_name_custom_routes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RouteDetailTable"
                android:weightSum="100"
                android:stretchColumns="0,1,2,3,4,5">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <TextView
                        android:layout_height="match_parent"
                        android:text="          "
                        android:gravity="center"
                        android:weightSum="20"
                        android:layout_width="match_parent" />

                    <TextView
                        android:layout_height="match_parent"
                        android:text="@string/latitude"
                        android:gravity="center"
                        android:weightSum="20"
                        android:singleLine="false"
                        android:elegantTextHeight="false"
                        android:layout_width="match_parent" />

                    <TextView
                        android:layout_height="match_parent"
                        android:text="@string/longitude"
                        android:gravity="center"
                        android:weightSum="20"
                        android:layout_width="match_parent" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/course"
                        android:gravity="center"
                        android:weightSum="20"
                        android:layout_width="match_parent" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:gravity="center"
                        android:weightSum="20"
                        android:layout_width="match_parent" />
                </TableRow>

                <View style="@style/Divider"
                    android:background="@android:color/darker_gray"
                    android:layout_alignParentEnd="false"
                    android:layout_below="@+id/RouteDistance" />

                <TableRow
                    android:id="@+id/first_custom_route-row"
                    android:weightSum="100"
                    android:stretchColumns="*" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:id="@+id/button"
                        android:layout_below="@+id/scrollView"
                        android:layout_alignParentStart="true"
                        android:weightsum="5"/>

                    <TextView
                        android:layout_height="match_parent"
                        android:text="@string/latitude"
                        android:gravity="center"
                        android:weightSum="20"
                        android:singleLine="false"
                        android:elegantTextHeight="false"
                        android:layout_width="match_parent" />

                    <TextView
                        android:layout_height="match_parent"
                        android:text="@string/longitude"
                        android:gravity="center"
                        android:weightSum="20"
                        android:layout_width="match_parent" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/course"
                        android:gravity="center"
                        android:weightSum="20"
                        android:layout_width="match_parent" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:gravity="center"
                        android:weightSum="20"
                        android:layout_width="match_parent" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:id="@+id/button2" />

                </TableRow>
            </TableLayout>
        </ScrollView>
</RelativeLayout>

