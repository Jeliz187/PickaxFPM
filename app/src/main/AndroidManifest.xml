<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utep.cs.pickax.fpms" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_fpms"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".View_Start"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name=".View_CreateFlightPlan"
            android:label="@string/title_activity_create_flight_plan" >
        </activity>
        <activity
            android:name=".View_RouteDetails"
            android:label="@string/title_activity_route_details" >
        </activity>
        <activity
            android:name=".View_ArchivedRoutes"
            android:label="@string/title_activity_archived_routes"
            android:parentActivityName=".View_CreateFlightPlan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View_CreateFlightPlan" />
        </activity>
        <activity
            android:name=".View_CustomRoutes"
            android:label="@string/title_activity_custom_routes" >
        </activity>
        <activity
            android:name=".View_ManageFlightPlans"
            android:label="@string/title_activity_manage_flight_plans"
            android:parentActivityName=".View_Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View_Start" />
        </activity>
        <activity
            android:name=".View_CreateAircraft"
            android:label="@string/title_activity_create_aircraft" >
        </activity>
        <activity
            android:name=".View_ManageResources"
            android:label="@string/title_activity_manage_resources"
            android:parentActivityName=".View_Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View_Start" />
        </activity>
        <activity
            android:name=".View_SetPreferences"
            android:label="@string/title_activity_view__set_preferences"
            android:parentActivityName=".View_Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View_Start" />
        </activity>
        <activity
            android:name=".View_StartFlight"
            android:label="@string/title_activity_view__start_flight" >
        </activity>
        <activity
            android:name=".View_InFlight"
            android:label="@string/title_activity_in_flight"
            android:parentActivityName=".View_Start" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View_Start" />
        </activity>
    </application>

</manifest>
